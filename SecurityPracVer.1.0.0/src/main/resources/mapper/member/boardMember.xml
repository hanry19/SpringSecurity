<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!--여기 잇는 이 com.블라블라-->
<mapper namespace="com.example.NewLearn.mapper.member.BoardMemberMapper">

    <sql id="criteria">
        <trim prefix="(" suffix=") AND">
            <foreach collection="typeArr" item="type" separator="or">
                <if test="type =='I'.toString()">
                    email like '%'|| #{keyword}||'%'
                </if>
                <if test="type =='N'.toString()">
                    name like '%'||#{keyword}||'%'
                </if>

            </foreach>
        </trim>
    </sql>


    <select id="searchTest" resultType="com.example.NewLearn.dto.member.MemberDTO">

        <![CDATA[
            select * from NewSecurityMemberLog
            where
                  ]]>
        <include refid="criteria"></include>
        <![CDATA[
        rownum < 10
        ]]>

    </select>


    <select id="selectAllMember" resultType="com.example.NewLearn.dto.member.MemberDTO">
        <![CDATA[
    select * from (
          select  /* index_asr(NewMemberList pk_board)*/
                 *

          from  NewSecurityMemberLog
          where    ]]>
        <include refid="criteria"></include>
        <![CDATA[       no > 0 and ROWNUM <= (#{pageNum} * #{amount})
      )
    where ROWNUM > (#{pageNum}-1) * #{amount}
        ]]>
    </select>

    <select id="getTotal" resultType="int">

        select count(no)
        from NewSecurityMemberLog

    </select>

    <select id="selectDetailMember" resultType="com.example.NewLearn.dto.member.MemberDTO">
        select
        NO, EMAIL, PASSWORD, PHONE, name, USERROLE, GITURL, TOTALAMOUNT, passwordLock, MODDATE,REGDATE,STATUS
        from memberList
        where no = #{no}


    </select>

    <delete id="memberDelete" parameterType="int">
        DELETE
        FROM NewSecurityMemberLog
        WHERE no = #{no}
    </delete>

    <update id="memberUpdate" parameterType="com.example.NewLearn.dto.member.MemberDTO">

        update NewSecurityMemberLog
        set password = #{password},
            email    = #{email},
            phone    = #{phone},
            gitUrl   = #{gitUrl},
            blogUrl  = #{blogUrl}
            MODDATE = TO_CHAR(SYSDATE,'YYYYMMDDHH24MISS')

        where no = #{no}

    </update>


</mapper>