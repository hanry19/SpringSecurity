<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!--여기 잇는 이 com.블라블라-->
<mapper namespace="com.example.NewLearn.mapper.member.BoardMemberMapper">

    <sql id="criteria">
        <trim prefix="(" suffix=") AND">
            <foreach collection="typeArr" item="type" separator="or">
                <if test="type =='I'.toString()">
                    email like '%'|| #{keyword}||'%'
                </if>
                <if test="type =='N'.toString()">
                    name like '%'||#{keyword}||'%'
                </if>

            </foreach>
        </trim>
    </sql>


    <select id="searchTest" resultType="com.example.NewLearn.dto.member.MemberDTO">

        <![CDATA[
            select * from (
        select /* index_desc(NewMemberList pk_board)   */ rownum rn, no, email, password,
               name, userRole, passwordLock, regDate, status
          from NewMemberList
          where
                  ]]>
        <include refid="criteria"></include>
        <![CDATA[
        rownum < 10
        ]]>
    </select>


    <select id="selectAllMember" resultType="com.example.NewLearn.dto.member.MemberDTO">
        <![CDATA[
    select * from (
           select /* index_desc(NewMemberList pk_board)   */ rownum rn, no, email, password,
               name, userRole, passwordLock, regDate, status
          from NewMemberList

          where    ]]>
        <include refid="criteria"></include>
        <![CDATA[       no > 0 and ROWNUM <= (#{pageNum} * #{amount})
      )
    where ROWNUM > (#{pageNum}-1) * #{amount}
        ]]>
    </select>

    <select id="getTotal" resultType="int">

        select count(no)
        from NewMemberList

    </select>

    <select id="selectDetailMember" resultType="com.example.NewLearn.dto.member.MemberDTO">
        select
        NO, EMAIL, PASSWORD, name, USERROLE,  passwordLock,regDate,STATUS
        from NewMemberList
        where no = #{no}
    </select>

    <delete id="memberDelete" parameterType="int">
        DELETE
        FROM NewMemberList
        WHERE email = #{email}
    </delete>

    <update id="memberUpdate" parameterType="com.example.NewLearn.dto.member.MemberDTO">

        update NewMemberList
        set password = #{password},
            email    = #{email}

        where no = #{no}

    </update>


</mapper>